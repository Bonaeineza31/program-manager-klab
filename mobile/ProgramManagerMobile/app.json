{
  "expo": {
    "name": "Program Manager Mobile",
    "slug": "program-manager-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1f497d"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.programmanager.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1f497d"
      },
      "package": "com.programmanager.mobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Program Manager Mobile to use your location for attendance tracking."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Program Manager Mobile to access your camera for QR code scanning."
        }
      ]
    ],
    "permissions": [
      "LOCATION",
      "CAMERA",
      "NOTIFICATIONS"
    ],
    "sdkVersion": "53.0.0"
  }
}
